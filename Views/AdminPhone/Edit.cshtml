        <div class="tab-pane fade" id="tab-hardware">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="Chipset" class="form-label">Chipset</label>
