@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Phone Models</h6>
                        <h2 class="fw-bold mb-0">@ViewData["PhoneCount"]</h2>
                    </div>
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                        <span style="font-size: 1.5rem;">&#128241;</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Brands</h6>
                        <h2 class="fw-bold mb-0">@ViewData["BrandCount"]</h2>
                    </div>
                    <div class="stat-icon bg-success bg-opacity-10 text-success">
                        <span style="font-size: 1.5rem;">&#127981;</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Pages</h6>
                        <h2 class="fw-bold mb-0">@ViewData["PageCount"]</h2>
                    </div>
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                        <span style="font-size: 1.5rem;">&#128196;</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title fw-bold mb-3">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a href="/derin/phones" class="btn btn-outline-primary text-start">Manage Phones</a>
                    <a href="/derin/brands" class="btn btn-outline-success text-start">Manage Brands</a>
                    <a href="/derin/pages" class="btn btn-outline-warning text-start">Manage Pages</a>
                    <a href="/derin/settings" class="btn btn-outline-secondary text-start">Site Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 12px;
    }
</style>
