@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function () {
    var fileInput = document.getElementById('mainImageFile');
    if (fileInput) {
        fileInput.addEventListener('change', function (e) {
            e.preventDefault();
            e.stopPropagation();
            var file = this.files[0];
            if (!file) return;
            if (file.size > 2 * 1024 * 1024) {
                document.getElementById('uploadStatus').textContent = 'File size must be less than 2 MB.';
                return;
            }
            var formData = new FormData();
            formData.append('file', file);
            document.getElementById('uploadStatus').textContent = 'Uploading...';
            fetch('/derin/upload/image', { method: 'POST', body: formData })
                .then(function (r) { return r.json(); })
                .then(function (data) {
                    if (data.url) {
                        document.getElementById('mainImageUrl').value = data.url;
                        document.getElementById('uploadStatus').textContent = 'Upload successful.';
                    } else {
                        document.getElementById('uploadStatus').textContent = data.error || 'Upload failed.';
                    }
                })
                .catch(function () {
                    document.getElementById('uploadStatus').textContent = 'Upload failed.';
                });
        });
    }
});
</script>
