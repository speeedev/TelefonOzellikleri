@model TelefonOzellikleri.Models.Page
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var isNew = Model.Id == 0;
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" action="@(isNew ? "/derin/pages/create" : $"/derin/pages/edit/{Model.Id}")">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                @if (!isNew)
                {
                    <div class="col-md-2">
                        <label class="form-label">ID</label>
                        <input asp-for="Id" class="form-control" readonly disabled style="max-width: 120px;" />
                    </div>
                }
                <div class="col-md-5">
                    <label asp-for="PageTitle" class="form-label">Title</label>
                    <input asp-for="PageTitle" class="form-control" placeholder="Page title" />
                </div>
                <div class="col-md-5">
                    <label asp-for="Slug" class="form-label">Slug</label>
                    <input asp-for="Slug" class="form-control" placeholder="page-url-slug" />
                </div>
                <div class="col-md-12">
                    <label asp-for="PageDescription" class="form-label">Description</label>
                    <input asp-for="PageDescription" class="form-control" placeholder="Short description (SEO)" />
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <label asp-for="Content" class="form-label">Content (HTML)</label>
            <textarea asp-for="Content" class="form-control content-editor" rows="20" placeholder="Page content..."></textarea>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-4">
        <a href="/derin/pages" class="btn btn-outline-secondary">Back</a>
        <button type="submit" class="btn btn-primary px-4">@(isNew ? "Create" : "Save")</button>
    </div>
</form>

@if (!isNew)
{
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <span class="text-muted">Public URL:</span>
                <a href="/page/@Model.Slug" target="_blank" class="ms-2">/page/@Model.Slug</a>
            </div>
            @if (Model.UpdatedAt.HasValue)
            {
                <small class="text-muted">Last updated: @Model.UpdatedAt.Value.ToString("dd MMM yyyy HH:mm")</small>
            }
        </div>
    </div>
}

<style>
    .form-label {
        font-weight: 500;
        font-size: 0.85rem;
        color: #555;
    }

    .card {
        border-radius: 12px;
    }

    .content-editor {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        line-height: 1.6;
    }
</style>
