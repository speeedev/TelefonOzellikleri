<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "TelefonOzellikleri.Net")</title>
    @if (ViewData["Description"] != null && !string.IsNullOrWhiteSpace(ViewData["Description"]?.ToString()))
    {
        <meta name="description" content="@ViewData["Description"]" />
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex flex-wrap justify-content-center justify-content-md-between align-items-center gap-2">
                <a class="navbar-brand display-6 mb-0" asp-controller="Home" asp-action="Index">TelefonOzellikleri.Net</a>
                <form method="get" action="/search" class="d-flex search-form" role="search">
                    <input type="search" name="q" class="form-control form-control-sm" placeholder="Telefon ara..." aria-label="Arama" style="min-width: 200px;" />
                    <button type="submit" class="btn btn-outline-primary btn-sm ms-2">Ara</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @ViewData["FooterText"]
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
