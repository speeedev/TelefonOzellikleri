                        <div class="col-md-2"><label asp-for="Cam4SensorSize" class="form-label">Sensor Size</label><input asp-for="Cam4SensorSize" class="form-control" /></div>
                        <div class="col-md-2"><label asp-for="Cam4PixelSize" class="form-label">Pixel Size</label><input asp-for="Cam4PixelSize" class="form-control" /></div>
